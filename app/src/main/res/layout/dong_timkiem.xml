<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageviewsearchbaihat"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/textviewsearchtenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/arimo_bold"
        android:maxWidth="300dp"
        android:text="Tên Bài Hát"
        android:textColor="#FBFBFB"
        android:textSize="21sp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/imageviewsearchbaihat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewsearchtencasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/arimo_bold"
        android:maxWidth="250dp"
        android:text="Ca siz"
        android:textColor="#C3C3C3"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageviewsearchbaihat"
        app:layout_constraintTop_toBottomOf="@+id/textviewsearchtenbaihat" />

